{
  "name": "@react-firebase/auth",
  "description": "Easily integrate Firebase Authentication in your react(or react-native) app.",
  "version": "0.2.10",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "jsnext:main": "dist/index.esm.js",
  "umd": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "license": "GPL-3.0-only",
  "author": {
    "name": "rakannimer",
    "email": "rakannimer@gmail.com"
  },
  "scripts": {
    "dev": "parcel src/demo/index.html -d tmp-demo-dir",
    "build": "rollup -c",
    "test": "tsc && jest",
    "prepublish": "npm run build",
    "pub": "yarn build && yarn publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash.get": "^4.4.4",
    "@types/react": "^16.4.11",
    "docz": "^0.9.6",
    "firebase": "^5.4.0",
    "jest": "^23.5.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-testing-library": "^5.0.0",
    "rollup": "^0.64.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "lodash.get": "^4.4.2",
    "render-and-add-props": "^0.5.0"
  },
  "peerDependencies": {
    "firebase": ">=4"
  },
  "repository": {
    "url": "https://github.com/rakannimer/react-firebase"
  },
  "files": [
    "dist/"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "keywords": [
    "react",
    "firebase",
    "auth",
    "react-firebase-auth",
    "firebase-auth"
  ]
}
